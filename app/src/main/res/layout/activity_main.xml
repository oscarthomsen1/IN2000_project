<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/bottom_navigation_menu"
        tools:layout_editor_absoluteX="16dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="14dp"

        android:layout_marginBottom="300dp"
        android:background="@drawable/main_bg"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/currentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textColor="@color/md_theme_dark_primary" />

        <ImageView
            android:id="@+id/weatherImage"
            android:layout_width="61dp"
            android:layout_height="51dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="34dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/kpIndexLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="-95dp"
            android:text="KP-index"
            android:textColor="@color/md_theme_dark_primary" />

        <TextView
            android:id="@+id/kpIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="280dp"
            android:layout_marginTop="-20dp"
            android:text="TextView"
            android:textColor="@color/md_theme_dark_primary" />

        <TextView
            android:id="@+id/northernLight"
            android:layout_width="211dp"
            android:layout_height="21dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:text="Nordlys:"
            android:textColor="@color/md_theme_dark_primary" />

        <TextView
            android:id="@+id/cloudCoverageLabel"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="-80dp"
            android:text="Skydekke"
            android:textColor="@color/md_theme_dark_primary" />

        <TextView
            android:id="@+id/cloudCoverage"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginStart="280dp"
            android:layout_marginTop="-21dp"
            android:text="TextView"
            android:textColor="@color/md_theme_dark_primary" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>